{
    "name": "covid-letter-web",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "node": "14.17.1"
    },
    "scripts": {
        "dev": "cross-env REACT_APP_ENV=local next dev",
        "build": "next build",
        "build:local": "cross-env REACT_APP_ENV=local next build",
        "start:local": "cross-env REACT_APP_ENV=local next start",
        "build:production": "cross-env REACT_APP_ENV=production next build",
        "start:production": "cross-env REACT_APP_ENV=production next start -p 8081",
        "clean": "rm -rf .next",
        "lint": "next lint",
        "prettier:fix": "prettier '**/*.{json,yaml}' --write",
        "test": "jest --config=jest.config.js",
        "test:watch": "jest --config=jest.config.js --watch",
        "deploy": "npm install && npm run build:local && eb deploy production",
        "deploy:production": "cross-env REACT_APP_ENV=production next build && node ./server.js"
    },
    "dependencies": {
        "axios": "^0.21.1",
        "core-js": "^3.15.2",
        "cross-env": "^7.0.3",
        "express": "^4.17.1",
        "next": "11.0.1",
        "prettier": "^2.3.2",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "swr": "^0.5.6"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "@testing-library/react-hooks": "^7.0.1",
        "@testing-library/user-event": "^13.1.9",
        "@types/jest": "^26.0.24",
        "@types/node": "^16.3.1",
        "@types/react": "17.0.14",
        "@types/react-dom": "^17.0.9",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "eslint": "^7.30.0",
        "eslint-config-next": "11.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-react": "^7.24.0",
        "husky": "^4.2.5",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^27.0.6",
        "lint-staged": "^11.0.0",
        "ts-jest": "^27.0.3",
        "typescript": "^4.3.5"
    },
    "lint-staged": {
        "**/*.{json,yaml,md}": "prettier --check",
        "**/*.{js,jsx,tsx}": "eslint"
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "scripts/add-issue-to-commit.sh $HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    }
}
