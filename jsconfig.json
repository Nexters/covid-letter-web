{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "$components/*": ["components/*"],
            "$utils/*": ["utils/*"],
            "$constants/*": ["constants/*"],
            "$constants": ["constants/index"],
            "$config/*": ["config/*"],
            "$config": ["config/index"],
            "$types/*": ["types/*"],
            "$hooks/*": ["hooks/*"],
            "$contexts/*": ["contexts/*"],
            "$styles/*": ["styles/*"]
        }
    },
    "include": ["src"]
}
